!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Presonal
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body
    %header.header
      .header_box
        %h1.apri-title
        =link_to " bokeboke" ,root_path ,class:"apri-title"
        -# =link_to "#{current_user.name}"
        -# = current_user.name
      %a.new-btn{href: "/posts/new"} ボケる
      = form_with(url:search_posts_path, local: true,method: :get) do |form|
        .search-box
          = form.text_field :keyword,placeholder: "投稿を検索する",class:"post-search"
          = form.submit "検索",class:"post-search-btn"
      .user-new
        - if user_signed_in?
          .user_nav.grid-6
            = link_to "ログアウト", destroy_user_session_path, method: :delete
        - else
          .grid-6
            = link_to "ログイン", new_user_session_path, class: 'post'
            = link_to "新規登録", new_user_registration_path, class: 'post'
       
    = yield
